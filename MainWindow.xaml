<Window x:Name="MiReclamo" x:Class="proyecto_tdp_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proyecto_tdp_2"
        mc:Ignorable="d"
        Title="MiReclamo" Height="720" Width="1280" WindowStartupLocation="CenterScreen" Topmost="True" MinWidth="1280" MinHeight="720" VerticalContentAlignment="Center">
    <Viewbox Stretch="Uniform">
        <Grid x:Name="BG" HorizontalAlignment="Center" VerticalAlignment="Center" Height="380" Width="305" Margin="15,15,15,15">
            <Border BorderBrush="#FFE8E8E8" BorderThickness="1" CornerRadius="10,10,10,10" Background="#FFFBFAF9"/>
            <Label x:Name="Title" Style="{StaticResource Inter}" Content="MiReclamo" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Background="{x:Null}"/>
            <Label x:Name="Welcome" Style="{StaticResource ResourceKey=Inter}" Content="Bienvenido" HorizontalAlignment="Center" Margin="0,57,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Background="{x:Null}"/>
            <Label x:Name="Description" Style="{StaticResource ResourceKey=Inter}" Content="Inicia sesión o registrate para continuar" HorizontalAlignment="Center" Margin="0,84,0,0" VerticalAlignment="Top" FontSize="10" Foreground="#FF828282" Background="{x:Null}"/>
            <Label x:Name="Mail" Style="{StaticResource ResourceKey=Inter}" Content="Correo electrónico" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="10" Foreground="#FF484848" Margin="40,120,0,0"/>
            <Border BorderBrush="#FFE8E8E8" BorderThickness="1" Margin="40,143,40,212" Background="White" CornerRadius="5,5,5,5" VerticalAlignment="Center" Padding="0,5,0,5">
                <TextBox x:Name="TBMail" Style="{StaticResource ResourceKey=Inter}" TextWrapping="Wrap" Text="micorreo@ejemplo.com" VerticalAlignment="Center" Margin="-1,0,-1,0" Height="25" FontSize="10" Foreground="#FF828282" VerticalContentAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" Padding="5,5,5,5" SelectionBrush="#FFE8E8E8" Cursor="IBeam"/>
            </Border>
            <Label x:Name="Pass" Style="{StaticResource ResourceKey=Inter}" Content="Contraseña" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="10" Foreground="#FF484848" Margin="40,0,0,0"/>
            <CheckBox x:Name="CBRecordar" Style="{StaticResource ResourceKey=Inter}" Content="Recordarme" HorizontalAlignment="Left" Margin="40,244,0,0" VerticalAlignment="Top" Background="White" Foreground="#FF828282" BorderBrush="#FF828282" VerticalContentAlignment="Center" FontSize="9"/>
            <Button x:Name="BForgotPass" Content="¿Olvidaste tu contraseña?" Style="{StaticResource ResourceKey=Inter}" HorizontalAlignment="Left" Margin="150,244,0,0" VerticalAlignment="Top" FontSize="9" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF0B99FF" Cursor="Hand"/>
            <Label Style="{StaticResource ResourceKey=Inter}" Content="o" HorizontalAlignment="Center" Margin="0,306,0,0" VerticalAlignment="Top" FontSize="10" Foreground="#FF828282" Background="{x:Null}"/>
            <Rectangle HorizontalAlignment="Left" Height="1" Margin="42,317,0,0" Stroke="#FFE8E8E8" VerticalAlignment="Top" Width="97"/>
            <Rectangle HorizontalAlignment="Left" Height="1" Margin="165,317,0,0" Stroke="#FFE8E8E8" VerticalAlignment="Top" Width="97"/>
            <Border BorderBrush="#FFE8E8E8" BorderThickness="1" Margin="40,201,40,0" VerticalAlignment="Top" Background="White" CornerRadius="5,5,5,5" Height="25" Padding="0,5,0,5">
                <TextBox x:Name="TBPass" Style="{StaticResource ResourceKey=Inter}" TextWrapping="Wrap" Text="....." VerticalAlignment="Center" Margin="-1,0,-1,0" Height="25" FontSize="10" Foreground="#FF828282" VerticalContentAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="#FFE8E8E8" Padding="5,5,5,5" Cursor="IBeam"/>
            </Border>
            <Border BorderBrush="#FF0B99FF" BorderThickness="1" Margin="42,276,42,0" CornerRadius="5,5,5,5" Background="#FF0B99FF" VerticalAlignment="Top" Height="25">
                <Button x:Name="BLogin" Content="Iniciar Sesión" Style="{StaticResource ResourceKey=Inter}" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="25" Width="220" Cursor="Hand"/>
            </Border>
            <Border BorderBrush="#FFC0E0FF" BorderThickness="1" Margin="41,333,41,0" Background="#FFC0E0FF" VerticalAlignment="Top" CornerRadius="5,5,5,5">
                <Button x:Name="BRegister" Content="Registrarse" Style="{StaticResource ResourceKey=Inter}" VerticalAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF0B99FF" Height="25" Cursor="Hand"/>
            </Border>
        </Grid>
    </Viewbox>
</Window>
