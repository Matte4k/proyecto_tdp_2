<UserControl x:Class="proyecto_tdp_2.MVVM.View.ClientesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="720"
             d:DesignWidth="1250">

    
    <UserControl.Resources>
        <Style TargetType="Button" x:Key="HoverButtonStyle">
            <Setter Property="Background" Value="#0066FF"/>
            <Setter Property="Foreground" Value="#D9EAFD"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="5"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D9EAFD"/>
                    <Setter Property="Foreground" Value="#000"/>
                    <Setter Property="BorderBrush" Value="#D9EAFD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="30">
        <StackPanel>

            
            <TextBlock Text="Gestión de Clientes"
                       FontWeight="Bold"
                       FontSize="24"
                       Margin="0,0,0,20" />

            
            <Border Background="#F8FAFC"
                    CornerRadius="10"
                    Padding="15"
                    Margin="0,0,0,20"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             x:Name="txtBuscarDni"
                             Margin="5"
                             Height="35"
                             VerticalContentAlignment="Center"
                              />

                    <Button Grid.Column="1"
                            Content="Buscar"
                            Width="100"
                            Height="35"
                            Margin="10,0,0,0"
                            Style="{StaticResource HoverButtonStyle}"
                            Click="BtnBuscar_Click"/>

                    <Button Grid.Column="2"
                            Content="Agregar Cliente"
                            Width="150"
                            Height="35"
                            Margin="20,0,0,0"
                            Style="{StaticResource HoverButtonStyle}"
                            Click="BtnCrearNuevoCliente_Click"/>
                </Grid>
                
            </Border>
            <CheckBox  x:Name="chkIncluirInactivos" Content="Mostrar inactivos" Margin="0,0,0,10" Checked="FiltroChanged" Unchecked="FiltroChanged"/>


            <TextBlock Text="Lista de Clientes"
                       FontWeight="Bold"
                       FontSize="18"
                       Margin="0,0,0,10" />
            <DataGrid x:Name="dgClientes"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Margin="0,10,0,0"
                      SelectionMode="Single"
                      HeadersVisibility="Column"
                      VerticalAlignment="Center"
                      BorderBrush="#E0E0E0"
                      BorderThickness="1"
                      RowBackground="#F8FAFC"
                      AlternatingRowBackground="#EEF2F6">

                <DataGrid.Columns >
                    <DataGridTextColumn  Header="ID" Binding="{Binding id_cliente}" Width="Auto" />
                    <DataGridTextColumn Header="DNI" Binding="{Binding dni}" Width="*"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding nombre}" Width="*"/>
                    <DataGridTextColumn Header="Apellido" Binding="{Binding apellido}" Width="*"/>
                    <DataGridTextColumn Header="Teléfono" Binding="{Binding telefono}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding email}" Width="*"/>

                    <DataGridTemplateColumn Header="Acciones" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">

                                    <Button Width="35" Height="35"
                                            Click="BtnEditar_Click"
                                            ToolTip="Editar cliente"
                                            Background="Transparent">
                                        <Image Source="/Images/edit.png" Width="16" Height="16"/>
                                    </Button>

                                    <Button Width="35" Height="35"
                                            Click="BtnBorrar_Click"
                                            Background="Transparent">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="ToolTip" Value="Dar de baja cliente"/>
                                                <Setter Property="Content">
                                                    <Setter.Value>
                                                        <Image Source="/Images/unable.png" Width="16" Height="16"/>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding activo}" Value="False">
                                                        <Setter Property="ToolTip" Value="Dar de alta cliente"/>
                                                        <Setter Property="Content">
                                                            <Setter.Value>
                                                                <Image Source="/Images/employee.png" Width="16" Height="16"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Anterior" Width="100" Margin="10,0" Click="BtnAnterior_Click" Style="{StaticResource HoverButtonStyle}"/>
                <TextBlock x:Name="txtPagina" VerticalAlignment="Center" FontWeight="Bold" Text="Página 1"/>
                <Button Content="Siguiente" Width="100" Margin="10,0" Click="BtnSiguiente_Click" Style="{StaticResource HoverButtonStyle}"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
