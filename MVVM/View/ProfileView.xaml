<Window x:Class="proyecto_tdp_2.MVVM.View.ProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MiReclamo - Perfil de Usuario"
        Height="700"
        Width="1250"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style TargetType="Button"
               x:Key="RoundedButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding"
                    Value="10,5" />
        </Style>
    </Window.Resources>

    <Border CornerRadius="20"
            Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Top bar -->
            <DockPanel Grid.Row="0"
                       Background="Transparent"
                       MouseDown="TopBar_MouseDown"
                       HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right"
                            Margin="0,5,10,0">
                    <Button Content="_"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="Black"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Click="BtnMinimize_Click" />
                    <Button Content="X"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="Red"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Click="BtnExit_Click"
                            HorizontalAlignment="Right" />
                </StackPanel>
            </DockPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Background="Transparent"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="75" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="100" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="MiReclamo"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   Margin="20,0,0,0" />

                        <StackPanel Grid.Row="1"
                                    Margin="0,20,0,0">
                            <RadioButton Content="Crear Reclamo"
                                         Height="40"
                                         FontSize="14"
                                         Margin="10,5"
                                         Style="{StaticResource MenuButtonTheme}"
                                         Checked="RadioButton_Checked_1" />
                            <RadioButton Content="Mis Reclamos"
                                         Height="40"
                                         FontSize="14"
                                         Margin="10,5"
                                         Style="{StaticResource MenuButtonTheme}"
                                         Checked="RadioButton_Checked" />
                            <RadioButton Content="Perfil"
                                         Height="40"
                                         FontSize="14"
                                         Margin="10,5"
                                         Style="{StaticResource MenuButtonTheme}"
                                         IsChecked="True" />
                            <RadioButton Content="Agregar Operador"
                                         Height="40"
                                         FontSize="14"
                                         Margin="10,5"
                                         Style="{StaticResource MenuButtonTheme}"
                                         IsChecked="False"
                                         Checked="RadioButton_Checked_2" />
                        </StackPanel>

                        <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    Margin="10"
                                    VerticalAlignment="Bottom">
                            <Ellipse Width="50"
                                     Height="50">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="pack://application:,,,/Images/man.png"
                                                Stretch="UniformToFill" />
                                </Ellipse.Fill>
                            </Ellipse>
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="Juan Pérez"
                                           FontWeight="Bold"
                                           FontSize="14" />
                                <TextBlock Text="Administrador"
                                           FontSize="12"
                                           Foreground="Gray" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <StackPanel Grid.Column="1"
                            Margin="30">
                    <TextBlock Text="Perfil de Usuario"
                               FontWeight="Bold"
                               FontSize="24"
                               Margin="0,0,0,20" />

                    <Border Background="White"
                            CornerRadius="10"
                            Padding="30"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <StackPanel HorizontalAlignment="Center">

                            <Ellipse Width="120"
                                     Height="120"
                                     Stroke="#3498DB"
                                     StrokeThickness="3"
                                     Margin="0,0,0,20">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="pack://application:,,,/Images/man.png"
                                                Stretch="UniformToFill" />
                                </Ellipse.Fill>
                            </Ellipse>

                            <TextBlock Text="Juan Pérez"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#2C3E50"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="Administrador"
                                       FontSize="16"
                                       Foreground="Gray"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,20" />

                            <StackPanel Orientation="Vertical"
                                        Width="400"
                                        Margin="0,0,0,20">
                                <TextBlock Text="Empresa: Aguas de Corrientes"
                                           FontSize="15"
                                           Margin="0,5" />
                                <TextBlock Text="DNI: 35123456"
                                           FontSize="15"
                                           Margin="0,5" />
                                <TextBlock Text="CUIT: 20-35123456-7"
                                           FontSize="15"
                                           Margin="0,5" />
                                <TextBlock Text="Correo Electrónico: juanperez123@gmail.com"
                                           FontSize="15"
                                           Margin="0,5" />
                                <TextBlock Text="Provincia: Corrientes"
                                           FontSize="15"
                                           Margin="0,5" />
                                <TextBlock Text="Teléfono: 3794010101"
                                           FontSize="15"
                                           Margin="0,5" />
                            </StackPanel>

                            <Button Content="Editar Perfil"
                                    Background="#0066FF"
                                    Foreground="White"
                                    FontSize="16"
                                    Width="200"
                                    Style="{StaticResource RoundedButton}"
                                    BorderThickness="0"
                                    Click="Button_Click" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
