<UserControl x:Class="proyecto_tdp_2.MVVM.View.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1250">

    <UserControl.Resources>
        <Style TargetType="Button"
               x:Key="RoundedButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10,5" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="30">
        <StackPanel>
            <TextBlock Text="Perfil de Usuario"
                       FontWeight="Bold"
                       FontSize="24"
                       Margin="0,0,0,20" />

            <Border Background="White"
                    CornerRadius="10"
                    Padding="30"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <StackPanel HorizontalAlignment="Center">

                    <Ellipse Width="120"
                             Height="120"
                             Stroke="#3498DB"
                             StrokeThickness="3"
                             Margin="0,0,0,20">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="pack://application:,,,/Images/man.png"
                                        Stretch="UniformToFill" />
                        </Ellipse.Fill>
                    </Ellipse>

                    <TextBlock x:Name="txtNombre"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#2C3E50" />
                    <TextBlock x:Name="txtRol"
                               FontSize="16"
                               Foreground="Gray"
                               Margin="0,0,0,20" />

                    <Grid Width="400" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="DNI:" FontWeight="Bold" FontSize="15" Margin="0,5" />
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtDni" FontSize="15" Margin="0,5" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="CUIT:" FontWeight="Bold" FontSize="15" Margin="0,5" />
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtCuit" FontSize="15" Margin="0,5" />

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Correo:" FontWeight="Bold" FontSize="15" Margin="0,5" />
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtCorreo" FontSize="15" Margin="0,5" />

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Provincia:" FontWeight="Bold" FontSize="15" Margin="0,5" />
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtProvincia" FontSize="15" Margin="0,5" />

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Teléfono:" FontWeight="Bold" FontSize="15" Margin="0,5" />
                        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtTelefono" FontSize="15" Margin="0,5" />

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Servicio:" FontWeight="Bold" FontSize="15" Margin="0,5" />
                        <TextBlock Grid.Row="5" Grid.Column="1" x:Name="txtServicio" FontSize="15" Margin="0,5" />
                    </Grid>

                    <Button Content="Editar Perfil"
                            Background="#0066FF"
                            Foreground="White"
                            FontSize="16"
                            Width="200"
                            Style="{StaticResource RoundedButton}"
                            BorderThickness="0"
                            Click="Button_Click" />
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
