<Window x:Class="proyecto_tdp_2.MVVM.View.DetalleReclamo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MiReclamo"
        Height="720"
        Width="1250"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="RoundedButtonStyle"
               TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding"
                    Value="10,0" />
            <Setter Property="FontWeight"
                    Value="Bold" />
        </Style>
    </Window.Resources>

    <Border CornerRadius="20"
            Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0"
                       Background="Transparent"
                       MouseDown="TopBar_MouseDown"
                       HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right"
                            Margin="0,5,10,0">
                    <Button Content="_"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="Black"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Click="BtnMinimize_Click"
                            Style="{StaticResource RoundedButtonStyle}" />
                    <Button Content="X"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="Red"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Click="BtnExit_Click"
                            Style="{StaticResource RoundedButtonStyle}" />
                </StackPanel>
            </DockPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Background="Transparent"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="75" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="100" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="MiReclamo"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   Margin="20,0,0,0" />

                        <StackPanel Grid.Row="1"
                                    Margin="0,20,0,0">
                            <RadioButton Content="Crear Reclamo"
                                         Height="40"
                                         FontSize="14"
                                         Margin="10,5"
                                         Style="{StaticResource MenuButtonTheme}"
                                         Checked="RadioButton_Checked_3" />
                            <RadioButton Content="Mis Reclamos"
                                         Height="40"
                                         FontSize="14"
                                         Margin="10,5"
                                         Style="{StaticResource MenuButtonTheme}"
                                         Checked="RadioButton_Checked" />
                            <RadioButton Content="Perfil"
                                         Height="40"
                                         FontSize="14"
                                         Margin="10,5"
                                         Style="{StaticResource MenuButtonTheme}"
                                         Checked="RadioButton_Checked_1" />
                            <RadioButton Content="Agregar Operador"
                                         Height="40"
                                         FontSize="14"
                                         Margin="10,5"
                                         Style="{StaticResource MenuButtonTheme}"
                                         Checked="RadioButton_Checked_2" />
                        </StackPanel>

                        <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    Margin="10"
                                    VerticalAlignment="Bottom">
                            <Ellipse Width="50"
                                     Height="50">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="pack://application:,,,/Images/man.png"
                                                Stretch="UniformToFill" />
                                </Ellipse.Fill>
                            </Ellipse>
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="Juan Pérez"
                                           FontWeight="Bold"
                                           FontSize="14" />
                                <TextBlock Text="Operador"
                                           FontSize="12"
                                           Foreground="Gray" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Column="1"
                              Margin="30"
                              VerticalScrollBarVisibility="Auto">

                    <Grid Grid.Row="1"
                          Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="1.5*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Margin="0,0,20,0">
                            <TextBlock Text="Detalles del Reclamo #001"
                                       FontWeight="Bold"
                                       FontSize="24"
                                       Margin="0,0,0,20" />

                            <Border Background="#F9F9F9"
                                    CornerRadius="10"
                                    Padding="20"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="Información del Reclamo"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               Margin="0,0,0,10" />

                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="ID del Reclamo:"
                                                   Grid.Column="0"
                                                   FontWeight="Bold" />
                                        <TextBlock Text="#001"
                                                   Grid.Column="1" />

                                        <TextBlock Text="Descripción:"
                                                   Grid.Column="0"
                                                   FontWeight="Bold"
                                                   Margin="0,30,0,0" />
                                        <TextBlock Text="Fuga de agua en calle principal"
                                                   Grid.Column="1"
                                                   Margin="0,30,0,0" />

                                        <TextBlock Text="Tipo de Servicio:"
                                                   Grid.Column="0"
                                                   FontWeight="Bold"
                                                   Margin="0,60,0,0" />
                                        <TextBlock Text="Agua Potable"
                                                   Grid.Column="1"
                                                   Margin="0,60,0,0" />

                                        <TextBlock Text="Zona:"
                                                   Grid.Column="0"
                                                   FontWeight="Bold"
                                                   Margin="0,90,0,0" />
                                        <TextBlock Text="Centro"
                                                   Grid.Column="1"
                                                   Margin="0,90,0,0" />

                                        <TextBlock Text="Prioridad:"
                                                   Grid.Column="0"
                                                   FontWeight="Bold"
                                                   Margin="0,120,0,0" />
                                        <TextBlock Text="Alta"
                                                   Grid.Column="1"
                                                   Margin="0,120,0,0"
                                                   Foreground="Red" />

                                        <TextBlock Text="Estado:"
                                                   Grid.Column="0"
                                                   FontWeight="Bold"
                                                   Margin="0,150,0,0" />
                                        <TextBlock Text="Abierto"
                                                   Grid.Column="1"
                                                   Margin="0,150,0,0"
                                                   Foreground="Blue" />

                                        <TextBlock Text="Fecha de Creación:"
                                                   Grid.Column="0"
                                                   FontWeight="Bold"
                                                   Margin="0,180,0,0" />
                                        <TextBlock Text="2023-10-26 10:30 AM"
                                                   Grid.Column="1"
                                                   Margin="0,180,0,0" />

                                        <TextBlock Text="Última Actualización:"
                                                   Grid.Column="0"
                                                   FontWeight="Bold"
                                                   Margin="0,210,0,0" />
                                        <TextBlock Text="2023-10-26 11:45 AM"
                                                   Grid.Column="1"
                                                   Margin="0,210,0,0" />
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <Border Background="#F9F9F9"
                                    CornerRadius="10"
                                    Padding="20"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Información del Ciudadano"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               Margin="0,0,0,10" />

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Nombre:"
                                                   Grid.Column="0"
                                                   FontWeight="Bold" />
                                        <TextBlock Text="Juan Pérez"
                                                   Grid.Column="1" />

                                        <TextBlock Text="Email:"
                                                   Grid.Column="0"
                                                   FontWeight="Bold"
                                                   Margin="0,30,0,0" />
                                        <TextBlock Text="juan.perez@example.com"
                                                   Grid.Column="1"
                                                   Margin="0,30,0,0" />

                                        <TextBlock Text="Teléfono:"
                                                   Grid.Column="0"
                                                   FontWeight="Bold"
                                                   Margin="0,60,0,0" />
                                        <TextBlock Text="+54 9 11 1234-5678"
                                                   Grid.Column="1"
                                                   Margin="0,60,0,0" />
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <Border Background="#F9F9F9"
                                    CornerRadius="10"
                                    Padding="20"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Margin="20">
                                <StackPanel>
                                    <TextBlock Text="Acciones"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               Margin="0,0,0,10" />
                                    <Button Content="Cambiar Estado"
                                            Background="#0066FF"
                                            Foreground="White"
                                            Height="40"
                                            Margin="0,0,0,10"
                                            BorderThickness="0"
                                            Style="{StaticResource RoundedButtonStyle}" />
                                    <Button Content="Asignar Operador"
                                            Background="#E0E0E0"
                                            Foreground="Gray"
                                            Height="40"
                                            BorderThickness="0"
                                            Margin="0,0,0,10"
                                            Style="{StaticResource RoundedButtonStyle}" />
                                    <Button Content="Añadir Nota"
                                            Background="#E0E0E0"
                                            Foreground="Gray"
                                            Height="40"
                                            BorderThickness="0"
                                            Style="{StaticResource RoundedButtonStyle}" />
                                </StackPanel>
                            </Border>

                            <Border Background="#F9F9F9"
                                    CornerRadius="10"
                                    Padding="20"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Historial y Notas"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               Margin="0,0,0,10" />

                                    <TextBlock Text="Operador (2023-10-26 11:00 AM): Reclamo recibido y asignado a equipo de campo."
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,10" />

                                    <TextBlock Text="Sistema (2023-10-26 10:30 AM): Reclamo creado por Juan Pérez."
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,10" />

                                    <TextBox Height="80"
                                             Margin="0,10,0,10"
                                             TextWrapping="Wrap" />

                                    <Button Content="Guardar Nota"
                                            Background="#0066FF"
                                            Foreground="White"
                                            Height="40"
                                            Width="120"
                                            BorderThickness="0"
                                            HorizontalAlignment="Right"
                                            Style="{StaticResource RoundedButtonStyle}" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</Window>