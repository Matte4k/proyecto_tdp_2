<UserControl x:Class="proyecto_tdp_2.MVVM.View.DetalleReclamo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:gmaps="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation">

    <UserControl.Resources>
        <Style x:Key="RoundedButtonStyle"
               TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </UserControl.Resources>

    <ScrollViewer Margin="30" VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>

            <!-- COLUMNA IZQUIERDA -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">

                <TextBlock x:Name="txtTitulo" 
                           Text="Detalles del Reclamo"
                           FontWeight="Bold"
                           FontSize="24"
                           Margin="0,0,0,20" />

                <Button Content="← Volver a Mis Reclamos"
                        Background="Transparent"
                        Foreground="#0066FF"
                        BorderThickness="0"
                        FontSize="14"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,10"
                        Click="BtnVolver_Click"
                        Style="{StaticResource RoundedButtonStyle}" />

                <!-- INFORMACIÓN DEL RECLAMO -->
                <Border Background="#F9F9F9"
                        CornerRadius="10"
                        Padding="20"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Información del Reclamo"
                                   FontWeight="Bold"
                                   FontSize="18"
                                   Margin="0,0,0,10" />

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="ID del Reclamo:" Grid.Column="0" FontWeight="Bold" />
                            <TextBlock x:Name="txtIdReclamo" Grid.Column="1" />

                            <TextBlock Text="Descripción:" Grid.Column="0" FontWeight="Bold" Margin="0,30,0,0" />
                            <TextBlock x:Name="txtDescripcion" Grid.Column="1" Margin="0,30,0,0" TextWrapping="Wrap" />

                            <TextBlock Text="Tipo de Servicio:" Grid.Column="0" FontWeight="Bold" Margin="0,60,0,0" />
                            <TextBlock x:Name="txtTipo" Grid.Column="1" Margin="0,60,0,0" />

                            <TextBlock Text="Zona:" Grid.Column="0" FontWeight="Bold" Margin="0,90,0,0" />
                            <TextBlock x:Name="txtZona" Grid.Column="1" Margin="0,90,0,0" />

                            <TextBlock Text="Prioridad:" Grid.Column="0" FontWeight="Bold" Margin="0,120,0,0" />
                            <TextBlock x:Name="txtPrioridad" Grid.Column="1" Margin="0,120,0,0" />

                            <TextBlock Text="Estado:" Grid.Column="0" FontWeight="Bold" Margin="0,150,0,0" />
                            <TextBlock x:Name="txtEstado" Grid.Column="1" Margin="0,150,0,0" />

                            <TextBlock Text="Fecha de Creación:" Grid.Column="0" FontWeight="Bold" Margin="0,180,0,0" />
                            <TextBlock x:Name="txtFechaCreacion" Grid.Column="1" Margin="0,180,0,0" />
                            <TextBlock Text="Última actualización:" FontWeight="Bold"  Margin="0,210,0,0"/>
                            <TextBlock x:Name="txtUltimaActualizacion"  Margin="0,210,0,0"/>


                        </Grid>
                        
                    </StackPanel>
                </Border>

                <Border Background="#F9F9F9"
                        CornerRadius="10"
                        Padding="20"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Información del Ciudadano"
                                   FontWeight="Bold"
                                   FontSize="18"
                                   Margin="0,0,0,10" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Nombre:" Grid.Column="0" FontWeight="Bold" />
                            <TextBlock x:Name="txtCliente" Grid.Column="1" />

                            <TextBlock Text="Email:" Grid.Column="0" FontWeight="Bold" Margin="0,30,0,0" />
                            <TextBlock x:Name="txtEmail" Grid.Column="1" Margin="0,30,0,0" />

                            <TextBlock Text="Teléfono:" Grid.Column="0" FontWeight="Bold" Margin="0,60,0,0" />
                            <TextBlock x:Name="txtTelefono" Grid.Column="1" Margin="0,60,0,0" />
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <Border Background="#F9F9F9"
                        CornerRadius="10"
                        Padding="20"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Margin="20">
                    <StackPanel>
                        <TextBlock Text="Acciones"
                                   FontWeight="Bold"
                                   FontSize="18"
                                   Margin="0,0,0,10" />
                        <Button Content="Cambiar Estado"
                                Background="#0066FF"
                                Foreground="White"
                                Height="40"
                                Margin="0,0,0,10"
                                BorderThickness="0"
                                Style="{StaticResource RoundedButtonStyle}" />
                        <Button Content="Asignar Operador"
                                Background="#E0E0E0"
                                Foreground="Gray"
                                Height="40"
                                BorderThickness="0"
                                Margin="0,0,0,10"
                                Style="{StaticResource RoundedButtonStyle}" />
                        <Button Content="Añadir Nota"
                                Background="#E0E0E0"
                                Foreground="Gray"
                                Height="40"
                                BorderThickness="0"
                                Style="{StaticResource RoundedButtonStyle}" />
                        <TextBlock Text="Comentario del cambio:" FontWeight="Bold" />
                        <TextBlock x:Name="txtComentarioHistorial" TextWrapping="Wrap" />
                        <TextBlock Text="Operador responsable:" FontWeight="Bold" />
                        <TextBlock x:Name="txtOperador" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
