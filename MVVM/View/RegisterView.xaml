<Window x:Class="proyecto_tdp_2.MVVM.View.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MiReclamo - Crear Operador"
        Height="720"
        Width="1250"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style TargetType="Button"
               x:Key="RoundedButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding"
                    Value="10,5" />
        </Style>
    </Window.Resources>

    <Border CornerRadius="20"
            Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0"
                       Background="Transparent"
                       MouseDown="TopBar_MouseDown"
                       HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right"
                            Margin="0,5,10,0">
                    <Button Content="_"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="Black"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Click="BtnMinimize_Click" />
                    <Button Content="X"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="Red"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Click="BtnExit_Click" />
                </StackPanel>
            </DockPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Background="Transparent"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="75" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="100" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="MiReclamo"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   Margin="20,0,0,0" />
                        <StackPanel Grid.Row="1"
                                    Margin="0,20,0,0">
                            <RadioButton Content="Crear Reclamo"
                                         Height="40"
                                         FontSize="14"
                                         Margin="10,5"
                                         Style="{StaticResource MenuButtonTheme}"
                                         Checked="RadioButton_Checked" />
                            <RadioButton Content="Mis Reclamos"
                                         Height="40"
                                         FontSize="14"
                                         Margin="10,5"
                                         Style="{StaticResource MenuButtonTheme}"
                                         Checked="RadioButton_Checked_1" />
                            <RadioButton Content="Perfil"
                                         Height="40"
                                         FontSize="14"
                                         Margin="10,5"
                                         Style="{StaticResource MenuButtonTheme}"
                                         Checked="RadioButton_Checked_2" />
                            <RadioButton Content="Agregar Operador"
                                         Height="40"
                                         FontSize="14"
                                         Margin="10,5"
                                         Style="{StaticResource MenuButtonTheme}"
                                         IsChecked="True" />
                        </StackPanel>

                        <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    Margin="10"
                                    VerticalAlignment="Bottom">
                            <Ellipse Width="50"
                                     Height="50">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="pack://application:,,,/Images/man.png"
                                                Stretch="UniformToFill" />
                                </Ellipse.Fill>
                            </Ellipse>
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="Juan Pérez"
                                           FontWeight="Bold"
                                           FontSize="14" />
                                <TextBlock Text="Administrador"
                                           FontSize="12"
                                           Foreground="Gray" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Column="1"
                              Margin="30"
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Crear Operador"
                                   FontWeight="Bold"
                                   FontSize="24"
                                   Margin="0,0,0,20" />

                        <Border Background="White"
                                CornerRadius="10"
                                Padding="30"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="420" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0"
                                            HorizontalAlignment="Center">
                                    <Ellipse x:Name="AvatarEllipse"
                                             Width="140"
                                             Height="140"
                                             Stroke="#3498DB"
                                             StrokeThickness="3"
                                             Margin="0,0,0,10">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="pack://application:,,,/Images/man.png"
                                                        Stretch="UniformToFill" />
                                        </Ellipse.Fill>
                                    </Ellipse>

                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,20">
                                        <Button Content="Subir foto"
                                                Click="BtnUploadPhoto_Click"
                                                Style="{StaticResource RoundedButton}"
                                                Width="120"
                                                Height="32" />
                                        <Button Content="Eliminar"
                                                Click="BtnRemovePhoto_Click"
                                                Style="{StaticResource RoundedButton}"
                                                Width="80"
                                                Height="32"
                                                Margin="10,0,0,0"
                                                Background="#FFE6E6" />
                                    </StackPanel>

                                    <TextBlock Text="Nombre completo"
                                               Margin="0,5" />
                                    <TextBox x:Name="tbFullName"
                                             Width="350"
                                             Height="30"
                                             Margin="0,0,0,10" VerticalContentAlignment="Center" PreviewTextInput="tbFullName_PreviewTextInput" />

                                    <TextBlock Text="Empresa"
                                               Margin="0,5" />
                                    <ComboBox x:Name="cbCompany"
                                              Width="350"
                                              Height="30"
                                              Margin="0,0,0,10"
                                              DisplayMemberPath="nombre"
                                              SelectedValuePath="id_servicio"
                                              VerticalContentAlignment="Center" />

                                    <TextBlock Text="Rol"
                                               Margin="0,5" />
                                    <ComboBox x:Name="cbRole"
                                              Width="350"
                                              Height="32"
                                              Margin="0,0,0,10" VerticalContentAlignment="Center">
                                        <ComboBoxItem Content="Operador"
                                                      IsSelected="True" />
                                        <ComboBoxItem Content="Administrador" />
                                    </ComboBox>

                                    <CheckBox x:Name="chkActive"
                                              Content="Activo"
                                              IsChecked="True"
                                              Margin="0,10,0,0" />
                                    <CheckBox x:Name="chkSendWelcome"
                                              Content="Enviar email de bienvenida"
                                              Margin="0,5,0,0" />
                                </StackPanel>

                                <StackPanel Grid.Column="1"
                                            Margin="30,0,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0"
                                                    Margin="0,0,10,0">
                                            <TextBlock Text="DNI"
                                                       Margin="0,5" />
                                            <TextBox x:Name="tbDNI"
                                                     Height="30" VerticalContentAlignment="Center" PreviewTextInput="tbDNI_PreviewTextInput" />

                                            <TextBlock Text="CUIT"
                                                       Margin="0,10,0,5" />
                                            <TextBox x:Name="tbCUIT"
                                                     Height="30" VerticalContentAlignment="Center" PreviewTextInput="tbCUIT_PreviewTextInput" />

                                            <TextBlock Text="Provincia"
                                                       Margin="0,10,0,5" />
                                            <ComboBox x:Name="cbProvince"
                                                      Height="30" VerticalContentAlignment="Center">
                                                <ComboBoxItem Content="Corrientes" />
                                                <ComboBoxItem Content="Buenos Aires" />
                                                <ComboBoxItem Content="Córdoba" />
                                                <ComboBoxItem Content="Salta" />
                                            </ComboBox>

                                            <TextBlock Text="Teléfono"
                                                       Margin="0,10,0,5" />
                                            <TextBox x:Name="tbPhone"
                                                     Height="30" VerticalContentAlignment="Center" PreviewTextInput="tbPhone_PreviewTextInput" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="1"
                                                    Margin="10,0,0,0">
                                            <TextBlock Text="Correo electrónico"
                                                       Margin="0,5" />
                                            <TextBox x:Name="tbEmail"
                                                     Height="30" VerticalContentAlignment="Center" />

                                            <TextBlock Text="Contraseña"
                                                       Margin="0,10,0,5" />
                                            <PasswordBox x:Name="pbPassword"
                                                         Height="30" VerticalContentAlignment="Center" />

                                            <TextBlock Text="Confirmar contraseña"
                                                       Margin="0,10,0,5" />
                                            <PasswordBox x:Name="pbConfirm"
                                                         Height="30" VerticalContentAlignment="Center" />

                                            <TextBlock Text="Zona/Área"
                                                       Margin="0,10,0,5" />
                                            <ComboBox x:Name="cbZone"
                                                      Height="30" VerticalContentAlignment="Center">
                                                <ComboBoxItem Content="Norte" />
                                                <ComboBoxItem Content="Sur" />
                                                <ComboBoxItem Content="Centro" />
                                                <ComboBoxItem Content="Todas" />
                                            </ComboBox>
                                        </StackPanel>
                                    </Grid>

                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Left"
                                                Margin="0,20,0,0">
                                        <Button Content="Crear Usuario"
                                                x:Name="btnSave"
                                                Width="160"
                                                Height="40"
                                                Background="#0066FF"
                                                Foreground="White"
                                                FontSize="14"
                                                Click="BtnSave_Click"
                                                Style="{StaticResource RoundedButton}" />
                                        <Button Content="Cancelar"
                                                Width="120"
                                                Height="40"
                                                Margin="10,0,0,0"
                                                Click="BtnCancel_Click"
                                                Style="{StaticResource RoundedButton}" />
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</Window>
