<UserControl x:Class="proyecto_tdp_2.MVVM.View.ClaimView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:gmaps="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation">

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10,5" />
        </Style>
    </UserControl.Resources>


    <Grid Grid.Row="1">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel >
                <TextBlock Text="Gestión de Reclamos" FontWeight="Bold" FontSize="24" Margin="0,0,0,10" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="250" />
                        <ColumnDefinition Width="*" MinWidth="250" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20" BorderBrush="#fbfaf9" BorderThickness="1" Margin="0,0,20,0">
                        <StackPanel>
                            <TextBlock Text="Crear Nuevo Reclamo" FontWeight="Bold" FontSize="18" Margin="0,0,0,20" />
                            <TextBlock Text="Tipo de Servicio:" />
                            <ComboBox x:Name="TypeCombo"
                                      Margin="0,5,0,10"
                                      Height="35"
                                      MinWidth="120"
                                      VerticalContentAlignment="Center"
                                      SelectionChanged="TypeCombo_SelectionChanged"/>
                            
                            <TextBlock Text="Subtipo:" />
                            <ComboBox x:Name="cbSubtipo"
                                      Margin="0,5,0,10"
                                      Height="35"
                                      MinWidth="120"
                                      VerticalContentAlignment="Center"
                                      />
                            <TextBlock Text="Prioridad:" />
                            <ComboBox x:Name="cbPriority"
                                      Margin="0,5,0,10"
                                      Height="35"
                                      MinWidth="120"
                                      VerticalContentAlignment="Center"
                                      />

                            <TextBlock Text="Cliente" />
                            <TextBox x:Name="txtBuscarCliente"
                                     Margin="0,5,0,10"
                                     Height="35"
                                     MinWidth="120"
                                     VerticalContentAlignment="Center"
                                     TextChanged="txtBuscarCliente_TextChanged"
                                     />

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="No encuentra al cliente?"
                                        FontWeight="Bold"
                                        Foreground="#578FCA"
                                        Background="Transparent"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"/>
                                <Button Content="Crear Nuevo Cliente"
                                        Grid.Column="1"
                                        Width="150"
                                        HorizontalAlignment="Right"
                                        Click="BtnCrearNuevoCliente_Click"
                                        Style="{StaticResource RoundedButton}"
                                        />

                            </Grid>
                            
                            <ListBox x:Name="lstClientes"
                                     Height="100"
                                     Margin="0,5,0,0"
                                     Visibility="Collapsed"
                                     MouseDoubleClick="lstResultadosClientes_MouseDoubleClick"
                                     DisplayMemberPath="dni"
                                     SelectedValue="id_cliente"
                                     Background="#F8FAFC"
                                     BorderBrush="Black"
                                     BorderThickness="1"
                                     />
                            <StackPanel >
                                <TextBlock Text="Ubicación:" />
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                                    <TextBox x:Name="txtDireccion" Width="250" Height="35" VerticalContentAlignment="Center" />
                                    <Button Content="Buscar" Width="100" Margin="10,0,0,0" Click="btnBuscar_Click" Style="{StaticResource RoundedButton}"/>
                                </StackPanel>

                                <Border Height="300" Background="#F0F0F0" CornerRadius="5" Margin="0,0,0,20">
                                    <gmaps:GMapControl x:Name="mapView" Loaded="mapView_Loaded" MouseDoubleClick="mapView_MouseDoubleClick"/>
                                </Border>
                                <TextBlock x:Name="lblCoordenadas" FontWeight="Bold" />
                            </StackPanel>
                            <TextBlock Text="Cargar Fotos:" />
                            
                            <Button Content="Elegir archivos" Margin="0,5,0,20" Height="30" MinWidth="120" Width="200" VerticalAlignment="Center" HorizontalAlignment="Left" Click="BtnCargarFotos_Click" Style="{StaticResource RoundedButton}"/>
                            <ItemsControl x:Name="PreviewPanel">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="5">
                                            <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="5">
                                                <Image Source="{Binding}" Width="100" Height="100" Stretch="UniformToFill" />
                                            </Border>
                                            <Button Content="X" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Background="Red" Foreground="White" FontWeight="Bold" Click="BtnEliminarFoto_Click" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock Text="Descripción:" />
                            <TextBox x:Name="txtDescripcion" Margin="0,5,0,20" Height="80" MinWidth="120" TextWrapping="Wrap" AcceptsReturn="True" />
                            <Button Content="Enviar Reclamo" Background="#0066FF" Foreground="White" BorderThickness="0" HorizontalAlignment="Left" Margin="10" Width="150" MinWidth="120"  Style="{StaticResource RoundedButton}" Click="BtnEnviarReclamo_Click"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20" BorderBrush="#fbfaf9" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Reclamos recientes" FontWeight="Bold" FontSize="18" Margin="0,0,0,20" />

                            <ItemsControl x:Name="RecentClaimsPanel" MouseLeftButtonUp="RecentClaim_Click">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding ColorFondo}"
                                                Padding="10"
                                                CornerRadius="10"
                                                Margin="0,0,0,10"
                                                Cursor="Hand">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Numero}" FontWeight="Bold" />
                                                <TextBlock Text="{Binding Tipo}" />
                                                <TextBlock Text="{Binding Direccion}" />
                                                <TextBlock Text="{Binding Fecha}" />
                                                <TextBlock Text="{Binding Estado}" Foreground="{Binding ColorEstado}" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>