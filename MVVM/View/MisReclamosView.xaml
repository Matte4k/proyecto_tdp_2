<Window x:Class="proyecto_tdp_2.MVVM.View.MisReclamosView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Visualización de Reclamos"
        Height="720"
        Width="1250"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="20"
            Background="#ffff">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- TopBar -->
            <DockPanel Grid.Row="0"
                       Background="Transparent"
                       MouseDown="TopBar_MouseDown"
                       HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right"
                            Margin="0,5,10,0">
                    <Button Content="_"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="Black"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Click="BtnMinimize_Click" />
                    <Button Content="X"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="Red"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Click="BtnExit_Click" />
                </StackPanel>
            </DockPanel>

            <!-- Layout -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Grid.Column="0"
                        Background="Transparent"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="75" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="100" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="MiReclamo"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   Margin="20,0,0,0" />

                        <StackPanel Grid.Row="1"
                                    Margin="0,20,0,0">
                            <RadioButton Content="Crear Reclamo"
                                         Height="40"
                                         FontSize="14"
                                         Margin="10,5"
                                         Style="{StaticResource MenuButtonTheme}"
                                         Checked="RadioButton_Checked" />
                            <RadioButton Content="Mis Reclamos"
                                         Height="40"
                                         FontSize="14"
                                         Margin="10,5"
                                         IsChecked="True"
                                         Style="{StaticResource MenuButtonTheme}" />
                            <RadioButton Content="Perfil"
                                         Height="40"
                                         FontSize="14"
                                         Margin="10,5"
                                         Style="{StaticResource MenuButtonTheme}"
                                         Checked="RadioButton_Checked_1" />
                            <RadioButton Content="Agregar Operador"
                                         Height="40"
                                         FontSize="14"
                                         Margin="10,5"
                                         Style="{StaticResource MenuButtonTheme}"
                                         Checked="RadioButton_Checked_2" />
                        </StackPanel>

                        <!-- Usuario -->
                        <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    Margin="10"
                                    VerticalAlignment="Bottom">
                            <Ellipse Width="50"
                                     Height="50">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="pack://application:,,,/Images/man.png"
                                                Stretch="UniformToFill" />
                                </Ellipse.Fill>
                            </Ellipse>
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="Juan Pérez"
                                           FontWeight="Bold"
                                           FontSize="14" />
                                <TextBlock Text="Administrador"
                                           FontSize="12"
                                           Foreground="Gray" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Contenido -->
                <StackPanel Grid.Column="1"
                            Margin="30">
                    <TextBlock Text="Mis Reclamos"
                               FontWeight="Bold"
                               FontSize="24"
                               Margin="0,0,0,20" />

                    <!-- Barra de búsqueda y filtros -->
                    <Border Background="#F9F9F9"
                            CornerRadius="10"
                            Padding="15"
                            Margin="0,0,0,20"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     Margin="5"
                                     Height="35"
                                     />

                            <ComboBox Grid.Column="1"
                                      Margin="5"
                                      Height="35">
                                <ComboBoxItem Content="Todos"
                                              IsSelected="True" />
                                <ComboBoxItem Content="Pendiente" />
                                <ComboBoxItem Content="En Curso" />
                                <ComboBoxItem Content="Resuelto" />
                            </ComboBox>

                            <ComboBox Grid.Column="2"
                                      Margin="5"
                                      Height="35">
                                <ComboBoxItem Content="Todos"
                                              IsSelected="True" />
                                <ComboBoxItem Content="Agua" />
                                <ComboBoxItem Content="Luz" />
                                <ComboBoxItem Content="Calles" />
                            </ComboBox>

                            <Button Grid.Column="3"
                                    Content="Filtrar"
                                    Background="#0066FF"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Width="100"
                                    Height="35"
                                    Margin="10,0,0,0"
                                     />
                        </Grid>
                    </Border>

                    <!-- Lista de Reclamos -->
                    <TextBlock Text="Lista de Reclamos"
                               FontWeight="Bold"
                               FontSize="18"
                               Margin="0,0,0,10" />

                    <StackPanel>
                        <!-- Card Reclamo -->
                        <Border Background="White"
                                CornerRadius="10"
                                Padding="15"
                                Margin="0,0,0,10"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="#12345"
                                               FontWeight="Bold" />
                                    <TextBlock Text="Tipo: Agua" />
                                    <TextBlock Text="📍 Calle Falsa 123" />
                                </StackPanel>

                                <TextBlock Grid.Column="1"
                                           Text="Pendiente"
                                           Foreground="Orange"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           Margin="20,0" />
                                <TextBlock Grid.Column="2"
                                           Text="15/07/2024"
                                           VerticalAlignment="Center"
                                           Margin="20,0" />
                                <Button Grid.Column="3"
                                        Content="Ver Detalles"
                                        Width="100"
                                        Height="30"
                                        Background="#F0F0F0"
                                        BorderBrush="#DDD"
                                        Margin="20,0"
                                        Click="Button_Click" />
                            </Grid>
                        </Border>

                        <!-- Puedes repetir más reclamos aquí -->
                    </StackPanel>

                    <!-- Notificaciones -->
                    <TextBlock Text="Notificaciones Recientes"
                               FontWeight="Bold"
                               FontSize="18"
                               Margin="0,20,0,10" />

                    <Border Background="#F9F9F9"
                            CornerRadius="10"
                            Padding="15"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="✔ Reclamo #12343 ha sido Resuelto."
                                       Foreground="Green"
                                       Margin="0,0,0,5" />
                            <TextBlock Text="ℹ El estado de Reclamo #12344 ha cambiado a En Curso."
                                       Foreground="Blue" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
