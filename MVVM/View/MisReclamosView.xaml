<UserControl x:Class="proyecto_tdp_2.MVVM.View.MisReclamosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="720"
             d:DesignWidth="1250">

    <Grid Margin="30">
        <StackPanel>
            <TextBlock Text="Mis Reclamos"
                       FontWeight="Bold"
                       FontSize="24"
                       Margin="0,0,0,20" />

            <Border Background="#F9F9F9"
                    CornerRadius="10"
                    Padding="15"
                    Margin="0,0,0,20"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Margin="5"
                             Height="35"
                             Text="Buscar"
                             VerticalContentAlignment="Center"
                             />

                    <ComboBox Grid.Column="1"
                              Margin="5"
                              Height="35"
                              VerticalContentAlignment="Center">
                        <ComboBoxItem Content="Todos"
                                      IsSelected="True" />
                        <ComboBoxItem Content="Pendiente" />
                        <ComboBoxItem Content="En Curso" />
                        <ComboBoxItem Content="Resuelto" />
                    </ComboBox>

                    <ComboBox Grid.Column="2"
                              Margin="5"
                              Height="35"
                              VerticalContentAlignment="Center">
                        <ComboBoxItem Content="Todos"
                                      IsSelected="True" />
                        <ComboBoxItem Content="Agua" />
                        <ComboBoxItem Content="Luz" />
                        <ComboBoxItem Content="Calles" />
                    </ComboBox>

                    <Button Grid.Column="3"
                            Content="Filtrar"
                            Background="#0066FF"
                            Foreground="White"
                            BorderThickness="0"
                            Width="100"
                            Height="35"
                            Margin="10,0,0,0" />
                </Grid>
            </Border>

            <TextBlock Text="Lista de Reclamos"
                       FontWeight="Bold"
                       FontSize="18"
                       Margin="0,0,0,10" />

            <StackPanel>
                <Border Background="White"
                        CornerRadius="10"
                        Padding="15"
                        Margin="0,0,0,10"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="#12345"
                                       FontWeight="Bold" />
                            <TextBlock Text="Tipo: Agua" />
                            <TextBlock Text="📍 Calle Falsa 123" />
                        </StackPanel>

                        <TextBlock Grid.Column="1"
                                   Text="Pendiente"
                                   Foreground="Orange"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="20,0" />
                        <TextBlock Grid.Column="2"
                                   Text="15/07/2024"
                                   VerticalAlignment="Center"
                                   Margin="20,0" />
                        <Button Grid.Column="3"
                                Content="Ver Detalles"
                                Width="100"
                                Height="30"
                                Background="#F0F0F0"
                                BorderBrush="#DDD"
                                Margin="20,0"
                                Click="Button_Click" />
                    </Grid>
                </Border>
            </StackPanel>

            <TextBlock Text="Notificaciones Recientes"
                       FontWeight="Bold"
                       FontSize="18"
                       Margin="0,20,0,10" />

            <Border Background="#F9F9F9"
                    CornerRadius="10"
                    Padding="15"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="✔ Reclamo #12343 ha sido Resuelto."
                               Foreground="Green"
                               Margin="0,0,0,5" />
                    <TextBlock Text="ℹ El estado de Reclamo #12344 ha cambiado a En Curso."
                               Foreground="Blue" />
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
