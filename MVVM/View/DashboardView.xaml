<Window x:Class="proyecto_tdp_2.MVVM.View.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MiReclamo"
        Height="850"
        Width="1250"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style TargetType="Button"
               x:Key="RoundedButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding"
                    Value="10,5" />
        </Style>
    </Window.Resources>

    <Border CornerRadius="20"
            Background="#ffff">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="Transparent"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="75" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="100" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="MiReclamo"
                               FontWeight="Bold"
                               FontSize="20"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0" />

                    <StackPanel Grid.Row="1"
                                Margin="0,20,0,0">
                        <RadioButton Content="Crear Reclamo"
                                     Height="40"
                                     FontSize="14"
                                     Margin="10,5"
                                     Style="{StaticResource MenuButtonTheme}" />
                        <RadioButton Content="Mis Reclamos"
                                     Height="40"
                                     FontSize="14"
                                     Margin="10,5"
                                     Style="{StaticResource MenuButtonTheme}" />
                        <RadioButton Content="Perfil"
                                     Height="40"
                                     FontSize="14"
                                     Margin="10,5"
                                     Style="{StaticResource MenuButtonTheme}" />
                    </StackPanel>

                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                Margin="10"
                                VerticalAlignment="Bottom">
                        <Ellipse Width="50"
                                 Height="50">

                        </Ellipse>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Juan Pérez"
                                       FontWeight="Bold"
                                       FontSize="14" />
                            <TextBlock Text="Ciudadano"
                                       FontSize="12"
                                       Foreground="Gray" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <StackPanel Grid.Column="1"
                        Margin="30">
                <TextBlock Text="Gestión de Reclamos"
                           FontWeight="Bold"
                           FontSize="24"
                           Margin="0,0,0,20" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Background="White"
                            CornerRadius="10"
                            Padding="20"
                            BorderBrush="#fbfaf9"
                            BorderThickness="1"
                            Margin="0,0,20,0">
                        <StackPanel>
                            <TextBlock Text="Crear Nuevo Reclamo"
                                       FontWeight="Bold"
                                       FontSize="18"
                                       Margin="0,0,0,20" />
                            <TextBlock Text="Tipo de Servicio:" />
                            <ComboBox Margin="0,5,0,20"
                                      Height="35">
                                <ComboBoxItem IsEnabled="False"
                                              IsSelected="True"
                                              Foreground="Gray">
                                    Seleccione un tipo
                                </ComboBoxItem>
                                <ComboBoxItem Content="Agua" />
                                <ComboBoxItem Content="Luz" />
                                <ComboBoxItem Content="Calles" />
                            </ComboBox>

                            <TextBlock Text="Ubicación:" />
                            <TextBox Margin="0,5,0,10"
                                     Height="35" />
                            <Border Height="150"
                                    Background="#F0F0F0"
                                    CornerRadius="5"
                                    Margin="0,0,0,20">
                                <TextBlock Text="[Mapa]"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Border>

                            <TextBlock Text="Cargar Fotos:" />
                            <Button Content="Elegir archivos"
                                    Margin="20,5,0,20"
                                    Height="30"
                                    Width="200"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource RoundedButton}"
                                    Click="BtnCargarFotos_Click" />
                            <ItemsControl x:Name="PreviewPanel">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="5">
                                            <Border BorderThickness="1"
                                                    BorderBrush="Gray"
                                                    CornerRadius="5">
                                                <Image Source="{Binding}"
                                                       Width="100"
                                                       Height="100"
                                                       Stretch="UniformToFill" />
                                            </Border>
                                            <Button Content="X"
                                                    Width="20"
                                                    Height="20"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    Background="Red"
                                                    Foreground="White"
                                                    FontWeight="Bold"
                                                    Click="BtnEliminarFoto_Click" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="Descripción:" />
                            <TextBox Margin="0,5,0,20"
                                     Height="80"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True" />
                            <Button Content="Enviar Reclamo"
                                    Background="#0066FF"
                                    Foreground="White"
                                    BorderThickness="0"
                                    HorizontalAlignment="Left"
                                    Margin="10"
                                    Width="150"
                                    Style="{StaticResource RoundedButton}" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1"
                            Background="White"
                            CornerRadius="10"
                            Padding="20"
                            BorderBrush="#fbfaf9"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Mis Reclamos"
                                       FontWeight="Bold"
                                       FontSize="18"
                                       Margin="0,0,0,20" />

                            <Border Background="#FFF5E5"
                                    CornerRadius="10"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="#12345"
                                               FontWeight="Bold" />
                                    <TextBlock Text="Tipo: Agua" />
                                    <TextBlock Text="Ubicación: Calle Falsa 123" />
                                    <TextBlock Text="15/07/2024" />
                                    <TextBlock Text="Pendiente"
                                               Foreground="Orange"
                                               FontWeight="Bold" />
                                </StackPanel>
                            </Border>

                            <Border Background="#E6F0FF"
                                    CornerRadius="10"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="#12344"
                                               FontWeight="Bold" />
                                    <TextBlock Text="Tipo: Calles" />
                                    <TextBlock Text="Ubicación: Av. Siempreviva 742" />
                                    <TextBlock Text="12/07/2024" />
                                    <TextBlock Text="En Curso"
                                               Foreground="Blue"
                                               FontWeight="Bold" />
                                </StackPanel>
                            </Border>

                            <Border Background="#E5F9E7"
                                    CornerRadius="10"
                                    Padding="10">
                                <StackPanel>
                                    <TextBlock Text="#12343"
                                               FontWeight="Bold" />
                                    <TextBlock Text="Tipo: Luz" />
                                    <TextBlock Text="Ubicación: Calle del Sol 456" />
                                    <TextBlock Text="10/07/2024" />
                                    <TextBlock Text="Resuelto"
                                               Foreground="Green"
                                               FontWeight="Bold" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>
