<Window x:Class="proyecto_tdp_2.MVVM.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MiReclamo - Iniciar Sesión"
        Height="700"
        Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="20"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            Padding="20"
            SnapsToDevicePixels="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0"
                       Background="Transparent"
                       MouseDown="TopBar_MouseDown">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                            DockPanel.Dock="Right"
                            Margin="0,5,10,0">
                    <Button Content="X"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="Red"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Click="BtnExit_Click" />
                </StackPanel>
            </DockPanel>

            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="350"
                        Margin="0,20,0,0"
                        >

                <TextBlock Text="MiReclamo"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#0066FF"
                           HorizontalAlignment="Center" />
                <TextBlock Text="Bienvenido"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,5,0,0"
                           HorizontalAlignment="Center" />
                <TextBlock Text="Inicia sesión o registrate para continuar"
                           FontSize="14"
                           Foreground="Gray"
                           HorizontalAlignment="Center" />

                <StackPanel>
                    <TextBlock Text="Correo electrónico"
                               FontWeight="Bold"
                               FontSize="14" 
                               Margin="30,0,0,0"/>
                    <TextBox x:Name="tbMail"
                             Width="300"
                             Height="35"
                             BorderBrush="#3498DB"
                             BorderThickness="1"
                             Padding="5"
                             FontSize="14" />
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Contraseña"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="30,0,0,0" />
                    <PasswordBox x:Name="tbPass"
                                 Width="300"
                                 Height="35"
                                 BorderBrush="#3498DB"
                                 BorderThickness="1"
                                 Padding="5"
                                 FontSize="14" />
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="20"
                            >
                    <CheckBox x:Name="cbRemember"
                              Content="Recordarme"
                              FontSize="14" />
                    <Button x:Name="btnForgot"
                            Content="¿Olvidaste tu contraseña?"
                            Foreground="#0066FF"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand" />
                </StackPanel>

                <Button x:Name="btnLogin"
                        Content="Iniciar Sesión"
                        Width="300"
                        Height="40"
                        Background="#0066FF"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Click="btnLogin_Click" />

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            >
                    <Rectangle Width="100"
                               Height="1"
                               Fill="#CCCCCC" />
                    <TextBlock Text="o"
                               Foreground="Gray"
                               FontSize="14" />
                    <Rectangle Width="100"
                               Height="1"
                               Fill="#CCCCCC" />
                </StackPanel>

                <Button x:Name="btnRegister"
                        Content="Registrarse"
                        Width="300"
                        Height="40"
                        Background="#CFE5FF"
                        Foreground="#0066FF"
                        FontSize="16"
                        FontWeight="Bold"
                        BorderThickness="0" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
