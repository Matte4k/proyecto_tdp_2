<UserControl x:Class="proyecto_tdp_2.MVVM.View.NewType"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:proyecto_tdp_2.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="720"
d:DesignWidth="1250">
    <UserControl.Resources>
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10,5" />
        </Style>
    </UserControl.Resources>

    <ScrollViewer Margin="30" VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock Text="Crear Tipo de reclamo"
                       FontWeight="Bold"
                       FontSize="24"
                       Margin="0,0,0,20" />
            <Border Background="White"
                    CornerRadius="10"
                    Padding="30"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <StackPanel>
                    <!-- COLUMNA IZQUIERDA -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Nombre" Margin="0,5" />
                        <TextBox x:Name="NombreReclamo"
                                 Width="350"
                                 Height="30"
                                 Margin="0,0,0,10"
                                 VerticalContentAlignment="Center"
                                  />

                        <TextBlock Text="Descripción" Margin="0,5" />
                        <TextBox x:Name="DescReclamo"
                                 Width="350"
                                 Height="30"
                                 Margin="0,0,0,10"
                                 VerticalContentAlignment="Center"
                                  />

                        <TextBlock Text="Es un Subtipo de reclamo?" Margin="0,5" />
                        <ComboBox x:Name="cbIsSubType"
                                  Width="350"
                                  Height="30"
                                  Margin="0,0,0,10"
                                  VerticalContentAlignment="Center"
                                  >
                            <ComboBoxItem Content="No" IsSelected="True"/>
                            <ComboBoxItem Content="Si" />
                        </ComboBox>
                        <StackPanel x:Name="Type" Visibility="Collapsed">
                            <TextBlock Text="Seleccione el Tipo Correspondiente:" Margin="0,5" />
                            <ComboBox x:Name="TypeCombo"
                                      Width="350"
                                      Height="30"
                                      Margin="0,0,0,10"
                                      VerticalContentAlignment="Center"
                                      DisplayMemberPath="nombre"
                                      SelectedValuePath="id_tipo"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,20,0,0">  
                            <Button Content="Crear Tipo de reclamo"
                                Width="160"
                                Height="40"
                                Background="#0066FF"
                                Foreground="White"
                                FontSize="14"
                                Click="BtnCrear_Click"
                                Style="{StaticResource RoundedButton}" />
                            <Button Content="Borrar todo"
                                Width="120"
                                Height="40"
                                Margin="10,0,0,0"
                                Click="BtnBorrarTodo_Click"
                                Style="{StaticResource RoundedButton}" />           
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>