<Window x:Class="proyecto_tdp_2.MVVM.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MiReclamo"
        MinHeight="600"
        MinWidth="900"
        Height="720"
        Width="1250"
        WindowStyle="None"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="true"
        Background="#01FFFFFF" 
        UseLayoutRounding="True">

    <Border CornerRadius="20" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="0" SnapsToDevicePixels="True" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0" Background="Transparent" MouseDown="TopBar_MouseDown">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" Margin="0,5,10,0">
                    <Button Content="_" Width="30" Height="30" Background="Transparent" Foreground="Black" BorderThickness="0" FontWeight="Bold" Click="BtnMinimize_Click" />
                    <Button Content="X" Width="30" Height="30" Background="Transparent" Foreground="Red" BorderThickness="0" FontWeight="Bold" Click="BtnExit_Click" HorizontalAlignment="Right" />
                </StackPanel>
            </DockPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*" MinWidth="200" />
                    <ColumnDefinition Width="7.5*" MinWidth="400" />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="Transparent" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="75" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="100" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="MiReclamo" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="20,0,0,0" />
                        <StackPanel Grid.Row="1" Margin="0,20,0,0">
                            <RadioButton Content="Crear Reclamo"
                                 Height="40"
                                 FontSize="14"
                                 Margin="10,5"
                                 Style="{StaticResource MenuButtonTheme}"
                                 IsChecked="True"
                                 Checked="RadioButton_Checked" />
                            <RadioButton Content="Mis Reclamos"
                                 Height="40"
                                 FontSize="14"
                                 Margin="10,5"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Checked="RadioButton_Checked" />
                            <RadioButton Content="Perfil"
                                 Height="40"
                                 FontSize="14"
                                 Margin="10,5"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Checked="RadioButton_Checked" />
                            <RadioButton x:Name="rbAgregarOperador"
                                 Content="Agregar Operador"
                                 Height="40"
                                 FontSize="14"
                                 Margin="10,5"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Checked="RadioButton_Checked" />
                            <RadioButton 
                                 Content="Agregar Tipo de Reclamo"
                                 Height="40"
                                 FontSize="14"
                                 Margin="10,5"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Checked="RadioButton_Checked" />
                            <RadioButton 
                                 Content="Dashboard"
                                 Height="40"
                                 FontSize="14"
                                 Margin="10,5"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Checked="RadioButton_Checked" />
                            <RadioButton 
                                 Content="Reportes"
                                 Height="40"
                                 FontSize="14"
                                 Margin="10,5"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Checked="RadioButton_Checked" />
                            <RadioButton 
                                 Content="Backup"
                                 Height="40"
                                 FontSize="14"
                                 Margin="10,5"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Checked="RadioButton_Checked" />
                        </StackPanel>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10" VerticalAlignment="Bottom">
                            <Ellipse Width="50" Height="50">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="pack://application:,,,/Images/man.png" Stretch="UniformToFill" />
                                </Ellipse.Fill>
                            </Ellipse>
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock x:Name="txtNombre" FontWeight="Bold" FontSize="14" />
                                <TextBlock x:Name="txtRol" FontSize="12" Foreground="Gray" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border Grid.Column="1" Margin="20,0,7,6" Background="White">
                    <ContentControl x:Name="MainContent" Margin="10"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>