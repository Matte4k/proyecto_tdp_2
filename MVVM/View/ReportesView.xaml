<UserControl x:Class="proyecto_tdp_2.MVVM.View.ReportesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20" Background="#fafafa">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Reportes de Reclamos" 
                       FontSize="26"
                       FontWeight="Bold"
                       Margin="0,0,0,30"
                       Grid.Row="0" />

            <StackPanel Orientation="Horizontal"
                        Grid.Row="1"
                        Margin="0,0,0,30"
                        HorizontalAlignment="Left">
                <ComboBox Width="150" Margin="5,0,15,0" SelectedIndex="0">
                    <ComboBoxItem Content="Últimos 30 días"/>
                    <ComboBoxItem Content="Últimos 3 meses"/>
                    <ComboBoxItem Content="Último año"/>
                </ComboBox>

                <ComboBox Width="150" Margin="0,0,10,0" SelectedIndex="0">
                    <ComboBoxItem Content="Todos"/>
                    <ComboBoxItem Content="Agua"/>
                    <ComboBoxItem Content="Electricidad"/>
                    <ComboBoxItem Content="Vías Públicas"/>
                </ComboBox>

                <Button Content="Generar Reporte" 
                        Background="#0078D7"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="15,5"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,10,0"
                        Click="Button_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" Value="#0078D7"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005A9E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Margin="10" Padding="10" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Reclamos Resueltos" FontWeight="Bold" />
                        <TextBlock Text="{Binding ReclamosResueltos}" FontSize="24" Foreground="Green" />
                    </StackPanel>
                </Border>

                <Border Margin="10" Padding="10" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1" Grid.Column="1">
                    <StackPanel>
                        <TextBlock Text="Tiempo Promedio de Resolución" FontWeight="Bold" />
                        <TextBlock Text="{Binding TiempoPromedioResolucion, StringFormat={}{0:N1} días}"
                                   FontSize="24" Foreground="DarkOrange" FontWeight="Bold" />

                        
                    </StackPanel>
                </Border>

                <Border Margin="10" Padding="10" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1" Grid.Column="2">
                    <StackPanel>
                        <TextBlock Text="Reclamos Pendientes (Alta Prioridad)" FontWeight="Bold" />
                        <TextBlock Text="{Binding ReclamosAltaPrioridad}" FontSize="24" Foreground="Red" />
                        
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="3" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border CornerRadius="10" Background="White" Padding="20" Margin="5" BorderBrush="#ddd" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Reclamos por Estado" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <lvc:CartesianChart
                            Series="{Binding SeriesEstados}"
                            XAxes="{Binding XAxisEstados}"
                            Height="250"
                            Margin="0,20,0,0"
                            LegendPosition="Bottom" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" CornerRadius="10" Background="White" Padding="20" Margin="5" BorderBrush="#ddd" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Reclamos por Tipo de Servicio" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <lvc:PieChart
    Series="{Binding SeriesServicios}"
    Height="250"
    Margin="0,20,0,0"
    LegendPosition="Bottom" />
                    </StackPanel>
                </Border>
            </Grid>

            <Border Grid.Row="4" CornerRadius="10" Background="White" Padding="20" BorderBrush="#ddd" BorderThickness="1" Margin="0,20,0,20">
                <StackPanel>
                    <TextBlock Text="Rendimiento de Operadores" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <DataGrid ItemsSource="{Binding RendimientoOperadores}" 
                              AutoGenerateColumns="False" 
                              HeadersVisibility="Column" 
                              CanUserAddRows="False" 
                              Margin="0,10,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Operador" Binding="{Binding Nombre}" Width="*"/>
                            <DataGridTextColumn Header="Reclamos Asignados" Binding="{Binding Asignados}" Width="*"/>
                            <DataGridTextColumn Header="Reclamos Resueltos" Binding="{Binding Resueltos}" Width="*"/>
                            <DataGridTextColumn Header="Tiempo Promedio (días)" Binding="{Binding PromedioDias, StringFormat={}{0:N1}}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
